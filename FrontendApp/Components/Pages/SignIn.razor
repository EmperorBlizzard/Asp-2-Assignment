@page "/SignIn"


<section class="signin">
    <div class="container">
        <div class="top-nav">
            <i class="fa-solid fa-chevron-left"></i>
            <h4>Sign in</h4>
        </div>
        <h1>Welcome Back!</h1>
        <p class="font-16 text">Sign in to continue</p>
        <form class="signin-form">
            <div class="form-email input-group">
                <label for="email">EMAIL</label>
                <input type="text" id="email" class="signin-input" />
            </div>
            <div class="form-password input-group">
                <label for="password">PASSWORD</label>
                <input type="text" id="password" class="signin-input" />
            </div>
            <div class="form-remember-forgot">
                <div class="checkbox-group">
                    <div class="input-group">
                        <input type="checkbox" id="remember">
                        <label for="remember">Remember me</label>
                    </div>
                </div>
                <a href="#">Forgot password?</a>
            </div>
            <button class="btn btn-main" type="submit">SIGN IN</button>
        </form>

        <p class="have-account font-16">Don’t have an account? <a href="#">Sign up.</a></p>

        <div class="socials">
            <a class="facebook" href="./facebook.html">
                <i class="fa-brands fa-facebook-f"></i>
            </a>
            <a class="twitter" href="#">
                <i class="fa-brands fa-twitter"></i>
            </a>
            <a class="google" href="#">
                <i class="fa-brands fa-google-plus-g"></i>
            </a>
        </div>
    </div>
</section>

